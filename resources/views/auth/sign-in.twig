{% extends "templates/auth_template.twig" %}

{% block title %} Sign-in Page | LMS {% endblock %}

{% block content %}
    <div class="container">
        <h1>Sign-in Page</h1>
        <p>Please provide us with you login credentials</p>
        <form action="{{ path_for('sign-in') }}" method="POST">
            <div class="input-box">
                <input id="username" type="text" name="username" autocomplete="false" required>
                <label for="username">Username</label>
            </div>
            <div class="input-box">
                <input id="password" type="password" name="password" autocomplete="false" required>
                <label for="password">Password</label>
            </div>
            <button type="submit">Sign in</button>
        </form>
    </div>
{% endblock %}
