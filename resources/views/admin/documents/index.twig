{% extends "templates/main.twig" %}
{% block title %}
	Admin Dashboard - Document Management
{% endblock %}
{% block main %}
	<div class="container-narrow">
		<div class="flex i-center j-between py-2">
			<div>
				<ol class="breadcrumb">
					<li class="breadcrumb__item">
						<a href="{{ path_for("home") }}">
							<span class="material-icons-round">home</span>
						</a>
					</li>
					<li class="breadcrumb__item">
						content management
					</li>
				</ol>
				<h1>Manage Content</h1>
			</div>
			<a href="{{ path_for("admin.addDocument") }}" class="btn btn-filled btn-primary">
				<span class="material-icons-round">add</span>
				create
			</a>
		</div>
	</div>
	<div class="container-narrow">
		{% if documents %}
			<div class="card">
				<div class="card__body">
					<div class="flex col j-center i-center py-5">
						<h2>No content found</h2>
						<p class="mb-1">Please add a learning document</p>
						<a href="{{ path_for("admin.addDocument") }}" class="btn btn-border-primary btn-rounded ">
							<span class="material-icons-round">local_library</span>
							New Learning document
						</a>
					</div>
				</div>
			</div>
		{% else %}
		{% endif %}
	</div>
{% endblock %}


