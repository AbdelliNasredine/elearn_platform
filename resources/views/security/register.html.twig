{% extends "templates/base.twig" %}

{% block title %} LMS - Registration Page {% endblock %}

{% block body %}
	<div class="login-container">
		<div class="row">
			<div class="col-8" style="background-color: var(--green)">
				<div class="container">
					<div class="hero">
						<h1 class="display">{{ __("messages.welcome") }}</h1>
						<p class="lead">
							Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium amet fugit nobis sit!
							A assumenda consequuntur dolores, enim id incidunt laborum libero neque, nisi non quibusdam quod sunt
							totam, velit.
						</p>
					</div>
				</div>
			</div>
			<div class="col-4">
				<div class="container">
					<div class="login-wrapper">
						<h3 class="display">{{ __("messages.registration") }}</h3>
						<p class="lead">{{ __("messages.fill_your_credentials") }}</p>

						{# alerts #}
						{% if flash("error") %}
							<div class="alert alert__error">
								<span class="material-icons-round"> error </span>
								{{ flash("error") | first }}
							</div>
						{% endif %}

						<form action="{{ path_for("auth.register") }}" method="post">

							{# Username field #}
							<div class="field">
								<input id="username" class="field__input" type="text" name="username" placeholder="Username" required>
								<label for="username" class="field__label"> {{ __("messages.field:username") }} </label>
							</div>

							{# Password field #}
							<div class="field">
								<input id="password" class="field__input" type="password" name="password" placeholder="Password"
											 required>
								<label for="password" class="field__label">{{ __("messages.field:password") }}</label>
								<span class="field-password__toggle material-icons-round">
										visibility
									</span>
							</div>

							{# Login Button #}
							<div class="field">
								<button class="btn btn-full btn-primary" type="submit">{{ __("messages.registration") }}</button>
							</div>

							{{ csrf() | raw }}
						</form>

						{# register link #}
						<div class="field">
							<p>
								Already have an account ?
								<a href="{{ path_for("auth.login") }}">
									Login here
								</a>
							</p>
						</div>

						{# langauge switcher #}
						{% include "templates/language_switcher.twig" %}

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
