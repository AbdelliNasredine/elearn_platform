{% extends "templates/base.twig" %}

{% block title %} LMS - Registration Page {% endblock %}
{% block body %}
<div class="login-container">
	<div class="card card-login">
		<div class="card__header">
			<h2 class="card__title">Registration</h2>
			<p class="card_subtext">Please fill your credentials</p>
			{% if flash("error") %}
				<div class="error">
					{{ flash("error") | first }}
				</div>
			{% endif %}
			{% if flash("success") %}
				<div class="success">
					{{ flash("success") | first }}
				</div>
			{% endif %}
		</div>
		<div class="card__body">
			<form action="{{ path_for("auth.register") }}" method="post">
				<div class="field field-rounded">
					<input
						class="field__input"
						type="text"
						name="username"
						placeholder="username"
					/>
					<label class="field__label"> Username </label>
				</div>
				<div class="field field-password">
					<input
						class="field__input"
						type="password"
						name="password"
						placeholder="password"
					/>
					<label class="field__label">Password</label>
					<button class="field-password__toggle">
						show
					</button>
				</div>
				<div class="field">
					<button
						class="btn btn-primary btn-full btn-rounded"
						type="submit"
					>
						Register
					</button>
				</div>
			</form>
		</div>
		<div class="card__footer">
			<a href="{{ path_for("auth.login") }}">Login</a>
		</div>
	</div>
</div>
{% endblock %}
